# SaaS Monitoring Platform - Environment Variables
# Copy this file to .env and replace with your values

# ============================================================
# MongoDB Configuration
# ============================================================
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=your_secure_password_here
MONGODB_URI=mongodb://admin:your_secure_password_here@mongodb:27017/

# ============================================================
# Elasticsearch Configuration
# ============================================================
ELASTICSEARCH_HOST=http://elasticsearch:9200

# ============================================================
# Redis Configuration
# ============================================================
REDIS_HOST=redis
REDIS_PORT=6379

# ============================================================
# Flask Configuration
# ============================================================
FLASK_ENV=production
FLASK_APP=app.py
FLASK_RUN_THREADED=false

# ============================================================
# Kibana Configuration (optional)
# ============================================================
# KIBANA_USER=kibana_system
# KIBANA_PASSWORD=your_kibana_password
